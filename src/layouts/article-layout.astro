---
import { BlogType } from "content/config";

interface Props {
    category: BlogType;
}
---

<article
    class:list={[
        "prose prose-slate mb-8 break-words text-font-color dark:prose-invert sm:mb-10",
        "prose-h2:text-3xl prose-h3:text-2xl prose-h4:text-xl prose-h5:text-lg prose-h6:text-lg",
        "font-serif prose-headings:font-sans",
        "prose-hr:mx-auto prose-hr:w-1/2 sm:prose-code:text-wrap",
        "selection:text-black dark:selection:text-white",
        Astro.props.category === BlogType.dev &&
            "selection:bg-dev hover:prose-a:text-dev prose-hr:border-dev",
        Astro.props.category === BlogType.beyond &&
            "selection:bg-beyond hover:prose-a:text-beyond prose-hr:border-beyond",
    ]}
>
    <slot />
</article>
