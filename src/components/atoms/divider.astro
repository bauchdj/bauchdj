---
interface Props {
    variant?: "default" | "light";
    classes?: string;
}

const { variant = "default", classes } = Astro.props;
---

<hr
    class:list={[
        "h-px border-0",
        variant === "default" && "bg-accent",
        variant === "light" && "bg-interactive-active",
        classes,
    ]}
/>
