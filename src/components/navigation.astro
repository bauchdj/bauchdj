---
import { PATHS } from "const";

const { pathname } = Astro.url;
const navLinks = [
    {
        href: PATHS.dev,
        text: "Web dev",
    },
    {
        href: PATHS.musing,
        text: "Musing",
    },
    {
        href: PATHS.about,
        text: "About",
    },
];
---

<nav>
    <ul class="flex gap-4">
        {
            navLinks.map(({ href, text }) => (
                <li>
                    <a
                        class:list={[
                            "hover:text-font-color-foreground font-serif text-lg tracking-tight",
                            pathname === href && "font-bold underline",
                            pathname === href && href === PATHS.dev && "decoration-dev",
                            pathname === href && href === PATHS.musing && "decoration-musing",
                            pathname === href && href === PATHS.about && "decoration-accent",
                        ]}
                        href={href}
                    >
                        {text}
                    </a>
                </li>
            ))
        }
    </ul>
</nav>
