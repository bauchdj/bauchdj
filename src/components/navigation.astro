---
import { PATHS } from "const";

const { pathname } = Astro.url;
const navLinks = [
    {
        href: PATHS.home,
        text: "Home",
    },
    {
        href: PATHS.dev,
        text: "Dev",
    },
    {
        href: PATHS.beyond,
        text: "Beyond dev",
    },
    {
        href: PATHS.about,
        text: "About",
    },
];
---

<nav class="mx-auto w-full max-w-4xl px-6 py-6 md:px-0">
    <ul class="flex gap-4">
        {
            navLinks.map(({ href, text }) => (
                <li>
                    <a
                        class:list={[
                            "font-serif tracking-tight",
                            href === PATHS.dev &&
                                pathname.includes(href) &&
                                "font-bold underline decoration-dev",
                            href === PATHS.beyond &&
                                pathname.includes(href) &&
                                "font-bold underline decoration-beyond",
                            href === PATHS.about &&
                                pathname.includes(href) &&
                                "font-bold underline decoration-accent",
                        ]}
                        href={href}
                    >
                        {text}
                    </a>
                </li>
            ))
        }
    </ul>
</nav>
