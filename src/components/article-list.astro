---
import type { CollectionEntry } from "astro:content";
import ArticleCard from "./article-card.astro";
import PageHeader from "./page-header.astro";

interface Props {
    title: string;
    pageDescription: string;
    articles: CollectionEntry<"blog">[];
}
---

<PageHeader title={Astro.props.title}>{Astro.props.pageDescription}</PageHeader>
<section class="flex flex-col gap-8">
    {Astro.props.articles.map((article) => <ArticleCard {article} />)}
</section>
