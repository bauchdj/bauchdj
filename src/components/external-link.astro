---
interface Props {
    href: string;
    classes?: string;
    variant?: "button" | "inline";
}

const { variant = "button" } = Astro.props;
---

<a
    href={Astro.props.href}
    target="_blank"
    rel="noopener noreferrer"
    class:list={[
        variant === "button" &&
            "rounded border border-interactive bg-background px-2 py-3 text-center text-sm text-font-color transition-colors duration-200 ease-in-out hover:border-interactive-active",
        variant === "inline" && "underline",
        Astro.props.classes,
    ]}><slot /></a
>
