---
import { getFormattedDate } from "@helpers/article";
import type { CollectionEntry } from "astro:content";
import H1 from "./h1.astro";

interface Props {
    article: CollectionEntry<"blog">;
}

const { article } = Astro.props;
const formattedTime = getFormattedDate(article.data.publicationDate);
---

<header class="mb-14">
    <H1 classes="mb-2 text-5xl leading-tight">{article.data.title}</H1>
    <time
        class="font-serif text-font-color-muted"
        datetime={article.data.publicationDate.toDateString()}>{formattedTime}</time
    >
</header>
