---
import ArticleList from "@components/article/article-list.astro";
import { getDevArticles } from "@data/articles";
import PageLayout from "@layouts/page-layout.astro";
import SeoPage from "@layouts/seo-page.astro";
import { CONFIG } from "const";

const articles = await getDevArticles();
---

<PageLayout>
    <SeoPage
        slot="head"
        title=`Web development article | ${CONFIG.author}`
        description="A collection of articles about web development and other tech subject."
    />
    <ArticleList
        title="Code Craft: Diving in the web development"
        articles={articles}
        pageDescription="My journey through the latest in web dev, shared with you in each post."
    />
</PageLayout>
